#This file is read at every shell start (contrary to .profile which exports $LOCALPROFILEREAD).
#It should only contain stuff that is by definition shell-local (like aliases).
#It should also work for both bash and zsh.

# behave more like SUSE
LS_OPTIONS="$LS_OPTIONS --color=auto"
alias l="ls -alF"
alias la="ls -la"
alias ll="ls -l"
alias dir="ls -l"
alias ls="ls $LS_OPTIONS"
alias ls-l="ls -l"
