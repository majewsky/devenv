export LOCALPROFILEREAD="yes"
test -f /etc/SuSE-release -a -z "$PROFILEREAD" && . /etc/profile || true

rm -rf $HOME/.adobe
cp -R $HOME/.adobe_orig $HOME/.adobe
rm -rf $HOME/.macromedia
[ -d "$HOME/Downloads" ] && rmdir "$HOME/Downloads"

export EDITOR=vim
export PAGER="less -R"
[ -e /soulianis ] && export PATH="/soulianis/bin:$PATH:/sbin:/usr/sbin:/usr/local/sbin"
# add home directory path
export PATH="$HOME/bin:$PATH"

# some measures (apart from .inputrc's set bell-style none and modprobe's blacklist pcspkr) to disable the system speaker
xset b 0
setterm -blength 0

# Python includes
export PYTHONPATH="$PYTHONPATH:$HOME/Code/python/PyXGraph:$HOME/Code/python/PlottingCanvas:$HOME/Code/python/Iterator:$HOME/Code/python/QuantumMaps"

# KDE installation
export KDEDIRS="/usr/local/:$KDEDIRS"
export LD_LIBRARY_PATH="/usr/local/lib/:$LD_LIBRARY_PATH"
