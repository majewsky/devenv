filetype plugin off
let mapleader = ","
let g:C_MapLeader = ","

function! SwitchSourceHeader()
  "update!
  if (expand ("%:e") == "cpp")
    find %:t:r.h
  else
    find %:t:r.cpp
  endif
endfunction
nmap <Leader>s :call SwitchSourceHeader()<CR>

"config and keybindings for BufExplorer plugin
let g:bufExplorerSortBy='name'
nmap <Leader><Leader> <Leader>be

"filetype plugin on
set autoindent
set background=dark
set cindent
set hlsearch
set linebreak
set mouse=a
set number
set shiftwidth=4
set tabstop=4
syntax enable

"remove highlighting of search matches
noremap <Leader> :nohl<CR>:<BS>

"highlight superfluous whitespace at end of line (except when typing at the end of a line)
"from http://vim.wikia.com/wiki/Highlight_unwanted_spaces
highlight ExtraWhitespace ctermbg=red guibg=red
match ExtraWhitespace /\s\+\%#\@<!$/

"map :W to :w
com W w
com Wq wq
com WQ wq
